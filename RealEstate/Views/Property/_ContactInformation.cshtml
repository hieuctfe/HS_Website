            new Dictionary<string, object> ()
            {
                ["Name"] = $"{prefix}ContactPhoneNumber",
                ["data-valmsg-for"] = $"{prefix}ContactPhoneNumber"
            })
        </div>
    </div>
    <div class="row m-t-10">
        <div class="col-10">
            @Html.LabelFor(model => model.ContactEmail, new { Name = $"{prefix}ContactEmail" })
            @Html.TextBoxFor(model => model.ContactEmail, new
            {
                @class = "form-control",
                Name = $"{prefix}ContactEmail"
            })
            @Html.ValidationMessageFor(model => model.ContactEmail, null,
            new Dictionary<string, object> ()
            {
                ["Name"] = $"{prefix}ContactEmail",
                ["data-valmsg-for"] = $"{prefix}ContactEmail"
            })
        </div>
        <div class="col-10 m-b-20">
            @Html.LabelFor(model => model.ContactAddress, new { Name = $"{prefix}ContactAddress" })
            @Html.TextBoxFor(model => model.ContactAddress, new
            {
                @class = "form-control",
                Name = $"{prefix}ContactAddress"
            })
