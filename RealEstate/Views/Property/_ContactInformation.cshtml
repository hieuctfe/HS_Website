@model PropertyContacInformation
@{
    string prefix = "ContactInformation.";
}

<div class="form-material col-12 float-left">
    <div class="row">
        <div class="col-4">
            @Html.LabelFor(model => model.ContactName, new { Name = $"{prefix}ContactName" })
            @Html.TextBoxFor(model => model.ContactName, new
            {
                @class = "form-control",
                Name = $"{prefix}ContactName"
            })
            @Html.ValidationMessageFor(model => model.ContactName, null,
            new Dictionary<string, object> ()
            {
                ["Name"] = $"{prefix}ContactName",
                ["data-valmsg-for"] = $"{prefix}ContactName"
            })
        </div>
        <div class="col-3">
            @Html.LabelFor(model => model.ContactPhoneNumber, new { Name = $"{prefix}ContactPhoneNumber" })
