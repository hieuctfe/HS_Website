@model _ImageCropper




<div class="col-md-12 col-lg-12">
    <div class="form-group">
        <div id="@Model.CropActiveId" class="card-title activeCropper" data-image-container="#@Model.ImageContainer">
            <button type="button" class="btn btn-warning waves-effect waves-light">
            @(string.IsNullOrEmpty(Model.ButtonText) ? "Select Images" : Model.ButtonText)</button>
            <input type="file" class="d-none" accept="image/*" name="file" value="" />
            <input type="hidden" name="uploadedData" value="@Model.ImageUploaded" />
        </div>
    </div>
    <label class="card-title">Danh Sách Ảnh</label>
    <div id="image-popup-gallery" class="row">
        <div id="@Model.ImageContainer" class="row w-100">
        </div>
    </div>
</div>