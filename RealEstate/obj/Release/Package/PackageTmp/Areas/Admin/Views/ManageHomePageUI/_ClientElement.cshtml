@model ClientViewModels
@{
    string index = string.Format("[{0}]", ViewBag.Index != null ? (int.Parse(ViewBag.Index) - 1).ToString() : "{{index}}");
    string prefix = $"{nameof(HomeUIClientViewModels.Clients)}{index}";

    string i = ViewBag.Index != null ? ViewBag.Index : "{{i}}";
}

<div class="card">
    <div class="card-header" id="heading@(i)">
        <h5 class="mb-0">
            <button type="button" class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse@(i)" aria-expanded="false" aria-controls="collapseOne">
                Client @(i)
            </button>
        </h5>
    </div>
    <div id="collapse@(i)" class="collapse" aria-labelledby="heading@(i)" data-parent="#accordion">
        <div class="card-body">
            <div class="form-material row col-12 float-left">
                <div class="col-6">
                    @Html.LabelFor(model => model.Name, new { Name = $"{prefix}.Name" })
                    @Html.TextBoxFor(model => model.Name, new
                    {
                        @class = "form-control",
                        Name = $"{prefix}.Name"
                    })
                    @Html.ValidationMessageFor(model => model.Name, null,
                        new Dictionary<string, object>()
                        {
                            ["Name"] = $"{prefix}.Name",
                            ["data-valmsg-for"] = $"{prefix}.Name"
                        })
                </div>
                <div class="col-4">
                    @Html.LabelFor(model => model.Position, new { Name = $"{prefix}.Position" })
                    @Html.TextBoxFor(model => model.Position, new
                    {
                        @class = "form-control",
                        Name = $"{prefix}.Position"
                    })
                    @Html.ValidationMessageFor(model => model.Position, null,
                        new Dictionary<string, object>()
                        {
                            ["Name"] = $"{prefix}.Position",
                            ["data-valmsg-for"] = $"{prefix}.Position"
                        })
                </div>
                <div class="col-12 m-t-20">
                    @Html.LabelFor(model => model.Content, new { Name = $"{prefix}.Content" })
                    @Html.TextAreaFor(model => model.Content, new
                    {
                        @class = "form-control",
                        Name = $"{prefix}.Content",
                        rows = 5
                    })
                    @Html.ValidationMessageFor(model => model.Content, null,
                        new Dictionary<string, object>()
                        {
                            ["Name"] = $"{prefix}.Content",
                            ["data-valmsg-for"] = $"{prefix}.Content"
                        })
                </div>
                <div class="col-12 m-t-20">
                    @Html.LabelFor(model => model.AvatarUploaded)
                    @{ Html.RenderPartial("ViewComponents/_ImageCropper",
                                 new _ImageCropper
                                 {
                                     CropActiveId = $"slider{i}",
                                     ImageContainer = $"slider{i}Container",
                                     ImageUploaded = Model?.AvatarUploaded ?? string.Empty,
                                     ButtonText = "Select Images (100 x 100)"
                                 });
                    }
                </div>
            </div>
        </div>
    </div>
</div>