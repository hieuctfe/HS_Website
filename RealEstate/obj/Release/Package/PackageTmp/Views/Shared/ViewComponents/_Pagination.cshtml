@model _PageView
@{ 
    string prefix = Model.Prefix;
}
<div class="row">
    <div class="col-md-12">
        <div class="pagination_area">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination_edit">
                    <li class="@(Model.PageIndex == 1 ? "disabled" : string.Empty)">
                        @{ Model.RouteValues[$"{prefix}PageIndex"] = 1; }
                        <a href="@Url.Action(Model.Action, Model.Controller, Model.RouteValues)" aria-label="First">
                            <span aria-hidden="true">First</span>
                        </a>
                    </li>
                    @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                    {
                        <li class="@(Model.PageIndex == i ? "active" : string.Empty)">
                            @{ Model.RouteValues[$"{prefix}PageIndex"] = i; }
                            <a href="@Url.Action(Model.Action, Model.Controller, Model.RouteValues)">@i</a>
                        </li>
                    }
                    <li class="@(Model.PageIndex == Model.TotalPage ? "disabled" : string.Empty)">
                        @{ Model.RouteValues[$"{prefix}PageIndex"] = Model.TotalPage; }
                        <a href="@Url.Action(Model.Action, Model.Controller, Model.RouteValues)" aria-label="Last">
                            <span aria-hidden="true">Last</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>